# Server
export SERVER_PORT="8080"
export SERVER_READ_TIMEOUT="5s"       # optional; defaults to 5s
export SERVER_WRITE_TIMEOUT="10s"     # optional; defaults to 10s
export SERVER_SHUTDOWN_PERIOD="15s"   # optional; defaults to 15s

# Postgres
export DB_HOST="localhost"
export DB_PORT="5432"
export DB_USER="postgres"
export DB_PASSWORD="your-password"
export DB_NAME="discussion_app"
export DB_SSLMODE="disable"           # or "require" in production

# JWT
export JWT_SECRET="super-secret-key"
export JWT_EXPIRES_IN="60"            # token expiry in minutes (default 60)

# SMTP / Mailer
export SMTP_HOST="smtp.gmail.com"
export SMTP_PORT="587"
export SMTP_USERNAME="your-smtp-user@gmail.com"
export SMTP_PASSWORD="your-smtp-app-password"
export FROM_EMAIL="noreply@yourdomain.com"

# Logging
export LOG_LEVEL="debug"              # or "info", "warn", "error"
export LOG_FORMAT="json"              # or "text"
